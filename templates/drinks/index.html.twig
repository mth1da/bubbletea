{% extends 'base.html.twig' %}

{% block title %}La Carte{% endblock %}

{% block body %}
<div class="container">
    <div class="row">

        <h1>La Carte</h1>

        {% for drink in drinks %}
            <div class="col">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ drink.getName }}</h5>
                        <p>{{ drink.getFlavour }}</p>
                        <p>{{ drink.getPrice }}â‚¬</p>
                        {% if app.user %}
                            <p>
                                <button type="button" class="btn btn-secondary" onclick="location.href='{{ path('app_drinks_add', {'id' : drink.id}) }}'">Ajouter au panier</button>
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>
    {% if app.user %}
        <button type="button" class="btn me-lg-1 mt-4 btn-secondary" data-bs-placement="bottom" onclick="location.href='{{ path('app_cart') }}'">Voir mon Panier</button>
    {% endif %}
</div>
{% endblock %}
