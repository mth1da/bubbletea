                    {% else %}
                        <li class="nav-item">
                            <button type="button" class="navbar-btn btn me-lg-1 ms-auto btn-outline-secondary" data-bs-placement="bottom" onclick="location.href='{{ path('app_login') }}'">Connexion</button>
                        </li>
                        <li class="nav-item">
                            <button type="button" class="navbar-btn btn me-lg-5 ms-auto btn-outline-secondary" data-bs-placement="bottom" onclick="location.href='{{ path('app_register') }}'">Inscription</button>
