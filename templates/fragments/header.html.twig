
<header>
    <nav class="navbar py-3 navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid collapse navbar-collapse">
            <a href="{{ path('app_homepage') }}">
                <img src="{{ asset('images/logo.png')}}" class="logo-img" alt="logo bubble tea">
