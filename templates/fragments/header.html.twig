                        {% endif %}

                        <li class="nav-item">
                            <button type="button" class="navbar-btn btn me-lg-1 ms-auto btn-outline-secondary" data-bs-placement="bottom" onclick="location.href='{{ path('app_profile')}}'">Mon Profil</button>
