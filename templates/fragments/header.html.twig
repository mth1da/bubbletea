                        <a class="nav-link" href=#>Some other thing</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=#>Again</a>
                    </li>
                </ul>

                <!-- Button -->
                <ul class="nav-bar nav ms-auto mb-2 mb-lg-0">

                    {# si l'user est connecté #}
                    {% if app.user %}
                        {# si l'user est un admin #}
                        {% if 'ROLE_ADMIN' in app.user.getroles() %}
                            <li class="nav-item">
                                <button type="button" class="navbar-btn btn me-lg-1 ms-auto btn-outline-secondary" data-bs-placement="bottom" onclick="location.href='{{ path('app_admin')}}'">Gérer la Carte</button>
